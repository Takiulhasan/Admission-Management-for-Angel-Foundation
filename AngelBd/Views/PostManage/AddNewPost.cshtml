@model IEnumerable<AngelBd.Models.PostManage>

@{
    ViewBag.Title = "AddNewPost";
    //Layout = "null";
}

<h2>AddNewPost</h2>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("AddNewPost", "PostManage", FormMethod.Post))
{
    <form method="post">
        <div class="container">
            <div class="row">
                <input class="form-control" type="text" placeholder="Title" name="PostTitle" />
            </div>
            <div class="row">
                <textarea class="ckeditor" name="PostContent"></textarea>
            </div>
        </div>
        <input type="submit" value="submit" />
    </form>

}